@page
@model CroptorAuth.Pages.Register.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="login-page">

    <partial name="_ValidationSummary"/>
    <div class="sign-card">
        <div class="header">
            <a asp-page="/Account/Login/Index" asp-route-returnUrl="@Model.ReturnUrl">
                <div> Log in</div>
            </a>
            <div class="active">Sign Up</div>
        </div>

        <div class="card-body">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName">username</label>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="NEO"/>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email">email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" class="sign-in-button">Sign Up</button>
            </form>
        </div>
        <ul class="external">
            @foreach (var provider in Model.ExternalLogins)
            {
                <a asp-page="/ExternalLogin/Challenge"
                   asp-route-scheme="@provider.Name"
                   asp-route-returnUrl="@Model.ReturnUrl">
                    @if (provider.DisplayName == "Google")
                    {
                        <img src="~/wwwroot-auth/images/sign up with google.svg" alt="Log in with Google" />
                    }
                    @if (provider.DisplayName == "Facebook")
                    {
                        <img src="~/wwwroot-auth/wwwroot-auth/images/sign up with facebook.svg" alt="Log in with Facebook" />
                    }
                </a>
            }
        </ul>
    </div>
</div>
